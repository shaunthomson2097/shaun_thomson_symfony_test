{% extends 'SocialPlacesBundle:Default:base.html.twig' %}

{% block body %}
    <div class="container font-white">
        <div class="row">
            <div class="col-xs-12">
                <h1>Thank you {{contact.firstname}}!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h1>Just one more thing :)</h1>
            </div>
            <div class="col-xs-12">
                <h1>Would you like to join our mailing list?</h1>
                <h1>You would then also qualify for our monthly prizes!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(form) }}
                <div class="center-element">
                <div class="form-group">
                    {{ form_widget(form.subscribe, {'attr': {'class': 'hidden confirm font-grey'}}) }}
                </div>
                <div class="form-group padding-top-20">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <input id="subscribe" class="btn btn-primary btn-lg" type="button" value="Subscribe">
                            <input id="cancel" class="btn btn-info btn-lg" type="button" value="No Thanks">
                            <input id="send" class="hidden" type="submit" name="submit" value="Submit">
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('#subscribe').click(function(){
                $('.confirm').val('true');
                $('#send').click();
            });

            $('#cancel').click(function(){
                $('.confirm').val('false');
                $('#send').click();
            });
        });
    </script>
{% endblock %}
</html>
{% endblock %}
